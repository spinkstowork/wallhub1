<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
       http://www.springframework.org/schema/context/spring-context.xsd"
>

    <context:component-scan base-package="com.ef"/>
    <context:property-placeholder location="jdbc.properties"/>

    <context:property-placeholder location="classpath:jdbc.properties"/>

    <bean id="dataSource"
          class="org.springframework.jdbc.datasource.DriverManagerDataSource">
        <property name="driverClassName" value="${jdbc.driverClassName}"/>
        <property name="url" value="${jdbc.url}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>

    <bean id="accessLogParser" class="com.ef.HttpLogParser">
        <property name="filename" value="${accesslog.filename}"/>
    </bean>

    <bean id="httpLogDAO" class="com.ef.dao.HttpLogDAO"/>
    <bean id="bizIntelDAO" class="com.ef.dao.BizIntelDAO"/>

</beans>